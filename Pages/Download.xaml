                <Button Height="40" Width="150" Content="下载" FontSize="17" pu:ButtonHelper.ButtonStyle="Outline" BorderBrush="Black" Foreground="Black" pu:ButtonHelper.ClickStyle="Sink" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,35,25" />
